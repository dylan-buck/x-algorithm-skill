---
interface Props {
  title: string;
  id?: string;
  variant?: "default" | "alt";
}

const { title, id, variant = "default" } = Astro.props;
const bgClass = variant === "alt" ? "bg-zinc-50" : "bg-white";
---

<section id={id} class={`border-t border-zinc-200 ${bgClass}`}>
  <div class="mx-auto max-w-5xl px-6 py-16">
    <h2 class="text-2xl font-semibold text-zinc-900 text-balance">{title}</h2>
    <div class="mt-8">
      <slot />
    </div>
  </div>
</section>
